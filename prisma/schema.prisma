generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("PRISMA_DATABASE_URL")
  directUrl = env("POSTGRES_URL")
}

enum Action {
  APPROVE
  REJECT
  RETRY
}

model VerificationLog {
  id             String   @id @default(uuid())
  apiKey         String
  timestamp      DateTime @default(now())
  durationMs     Int
  input_question String
  input_answer   String
  result_action  Action
  result_score   Float
  result_details Json

  @@index([apiKey])
  @@index([timestamp])
}
